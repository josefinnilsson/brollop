---
const { currentLang = 'sv' } = Astro.props;
---

<nav class="language-switcher">
  <a href={currentLang === 'sv' ? '/nl/' : '/sv/'}>
    <span class={currentLang === 'sv' ? 'active' : 'inactive'}>SV</span>/<span
      class={currentLang === 'nl' ? 'active' : 'inactive'}>NL</span
    >
  </a>
</nav>
